{
	"compileOnSave": true,
	"compilerOptions": {
		"target": "es2019",
		"removeComments": true,
		"strictNullChecks": true,
		"noImplicitReturns": true,
		"noImplicitAny": true,
		"preserveConstEnums": true,
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"preserveSymlinks": true,
		"isolatedModules": true,
		"resolveJsonModule": true,
		"types": [
			"mocha"
		],
		"baseUrl": ".",
		"paths": {
			"bp/*": [
				"../src/core/*"
			]
		},
	},
	"include": [
		"./**/*.ts",
		"../src/core/**/*.d.ts"
	],
	"ts-node": {
		"files": true
	}
}
