{
	"compilerOptions": {
		"baseUrl": "../src",
		"experimentalDecorators": true,
		"isolatedModules": true,
		"moduleResolution": "node",
		"preserveSymlinks": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "esnext",
		"types": [
			"mocha",
			"wicg-file-system-access"
		]
	},
	"include": [
		"./**/*.ts",
		"../src/shared/types/**/*.ts"
	],
	"ts-node": {
		"files": true,
		"swc": true,
	}
}
