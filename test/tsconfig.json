{
	"compilerOptions": {
		"baseUrl": "../src",
		"experimentalDecorators": true,
		"isolatedModules": true,
		"moduleResolution": "node",
		"noImplicitOverride": true,
		"preserveSymlinks": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "esnext",
		"types": [
			"mocha",
			"node"
		],
		"paths": {
			"@utils/*": [
				"../test/utils/*"
			]
		}
	},
	"include": [
		"./**/*.ts",
		"../src/shared/types/**/*.d.ts"
	],
	"ts-node": {
		"files": true,
		"swc": true
	}
}