{
	"[jsonc]": {
		"editor.formatOnSave": true
	},
	"cSpell.ignorePaths": [
		"**/package*.json",
		"src/locale/es.json",
		".vscode",
		".eslintrc*",
		"debug/**/*",
		"**/*sample*"
	],
	"cSpell.ignoreRegExpList": [
		"/[A-Z]+(?![a-z])/g"
	],
	"cSpell.ignoreWords": [
		"fbclid",
		"lazypipe",
		"opendir",
		"purgecss",
		"tinyurl",
		"weixin"
	],
	"cSpell.words": [
		"aabb",
		"appinstalled",
		"beforeinstallprompt",
		"bpstudio",
		"browserslistrc",
		"Chainer",
		"Chebyshev",
		"configurator",
		"dpad",
		"draggables",
		"esbuild",
		"fontawesome",
		"fullscreen",
		"gops",
		"gtag",
		"i",
		"Intersector",
		"Joinee",
		"jsons",
		"jszip",
		"kamiya",
		"keyval",
		"lzma",
		"macrotasks",
		"makeomatic",
		"mixins",
		"mozfullscreenchange",
		"nocheck",
		"notranslate",
		"onbeforeinstallprompt",
		"osme",
		"outfile",
		"overlappings",
		"partitioner",
		"paypal",
		"periodicsync",
		"pixi",
		"popperjs",
		"precache",
		"precaching",
		"queryable",
		"Ravl",
		"Rebalancing",
		"Renderable",
		"reselectable",
		"scrollable",
		"selectables",
		"serializable",
		"slicksort",
		"stylelint",
		"touchability",
		"tsai",
		"tsun",
		"typeless",
		"unversioned",
		"wicg",
		"xdescribe"
	],
	"css.validate": false,
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": "explicit"
	},
	"explorer.fileNesting.enabled": true,
	"explorer.fileNesting.expand": false,
	"explorer.fileNesting.patterns": {
		"*.css": "$(capture).css.map",
		"*.js": "$(capture).prod.js, $(capture).min.js, $(capture).js.map",
		"*.woff2": "$(capture).eot, $(capture).svg, $(capture).ttf, $(capture).woff",
		".*rc.json": ".$(capture)ignore",
		".eslintrc.json": "eslint-local-rules.js",
		".gitignore": ".gitattributes",
		"package.json": "pnpm-lock.yaml, .npmrc"
	},
	"files.exclude": {
		"**/debug.log": true,
		"**/node_modules": true,
		".nyc_output": true
	},
	"i18n-ally.enabledFrameworks": [
		"vue"
	],
	"i18n-ally.enabledParsers": [
		"json"
	],
	"i18n-ally.indent": 4,
	"i18n-ally.keysInUse": [
		"since"
	],
	"i18n-ally.keystyle": "nested",
	"i18n-ally.localesPaths": "src/locale",
	"i18n-ally.sourceLanguage": "en",
	"i18n-ally.tabStyle": "tab",
	"i18n-ally.usage.scanningIgnore": [
		"src/public/**/*",
		"lib/**/*"
	],
	"javascript.suggestionActions.enabled": false, // See https://github.com/Microsoft/vscode/issues/47299
	"mochaExplorer.multiFileSuites": true,
	"scss.validate": false,
	"stylelint.packageManager": "pnpm",
	"stylelint.validate": [
		"css",
		"scss",
		"vue"
	],
	"typescript.tsdk": "node_modules\\typescript\\lib"
}