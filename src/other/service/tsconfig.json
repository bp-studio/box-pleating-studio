{
	"compilerOptions": {
		"target": "es2017",
		"removeComments": true,
		"outFile": "sw.js",
		"lib": ["webworker", "esnext"],
		// 因為這邊我們沒有載入 lib.dom，很多宣告檔會出錯，這邊指定跳過檢查以避免錯誤
		"skipLibCheck": true,
		"moduleResolution": "node",
		"baseUrl": "../../../node_modules/"
	},
	"include": [
		"./**/*.ts"
	]
}
