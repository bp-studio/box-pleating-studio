{
	"compileOnSave": true,
	"compilerOptions": {
		"target": "es2016",
		"types": [], // 避免使用到 Node 版的 setTimeout
		"lib": ["DOM", "ESNext"], // 做了上一則設置之後這個是必要的
		"removeComments": true,
		"strictNullChecks": true,
		"noImplicitReturns": true,
		"noImplicitAny": true,
		"preserveConstEnums": true,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"isolatedModules": true,
		"baseUrl": ".",
		"paths": {
			"bp/*": [
				"./*"
			]
		},
	},
	"include": [
		"./**/*.ts"
	]
}
